rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // START: Development Rules
    // These rules allow anyone to read and write to your database.
    // This is useful for development but should be locked down for production.
    
    match /knowledge_base/{document=**} {
      allow read, write: if true;
    }
    
    match /estimation_history/{document=**} {
      allow read, write: if true;
    }
    
    // Fallback: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
